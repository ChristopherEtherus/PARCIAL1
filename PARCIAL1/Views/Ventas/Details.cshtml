@model PARCIAL1.Models.Venta

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de Ventas</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalVentas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalVentas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehiculo.VehiculoId)
        </dd>
