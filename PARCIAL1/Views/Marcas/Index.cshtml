@model IEnumerable<PARCIAL1.Models.Marca>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Marcas</h2>
<br />
<p>
    <a asp-action="Create" class="btn btn-success">Agregar Una Nueva Marca</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MarcaId" class="btn btn-primary">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.MarcaId" class="btn btn-primary">Detallar</a> 
                    <a asp-action="Delete" asp-route-id="@item.MarcaId" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
